<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="194dp"
        android:layout_height="33dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:background="@android:color/white"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/usuario"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="194dp"
        android:layout_height="33dp"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:background="@android:color/white"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/login"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="114dp"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/registrar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="114dp"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="196dp"
        android:layout_height="181dp"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconoapprecetas1" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="User"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pass"
        app:layout_constraintEnd_toStartOf="@+id/contrasena" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Password"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/usuario" />
</android.support.constraint.ConstraintLayout>