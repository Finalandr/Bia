<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        card_view:cardBackgroundColor="@color/azul">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_cards_size"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/platillo_imagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="exito"
            android:scaleType="centerCrop"
            android:tint="@color/blanco"
            android:layout_alignParentLeft="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/verde"
            android:orientation="vertical"
            android:padding="@dimen/margin_default">

        <TextView
            android:id="@+id/platillo_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/cards_title_text_medium" />
        </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                card_view:srcCompat="@drawable/plato" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>